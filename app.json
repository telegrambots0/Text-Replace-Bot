{
  "expo": {
    "name": "Telegram-Bots",
    "version": "1.0.0",
    "description": "A collection of Telegram bots",
    "platforms": ["ios", "android"],
    "sdkVersion": "42.0.0",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "env": {
      "API_ID": {
        "description": "Enter Your API ID",
        "required": true
      },
      "API_HASH": {
        "description": "Enter Your API Hash",
        "required": true
      },
      "BOT_TOKEN": {
        "description": "Enter Your Bot Token",
        "required": true
      }
    },
    "addons": [],
    "buildpacks": [
      {
        "url": "heroku/python"
      },
      {
        "url": "https://github.com/jonathanong/heroku-buildpack-ffmpeg-latest.git"
      }
    ],
    "extra": {
      "autoCaptionConfig": {
        "enabled": true,
        "captionPrefix": "[Auto Caption]",
        "maxCaptionLength": 100
      },
      "autoForwardConfig": {
        "enabled": true,
        "fromChannel": "@source_channel",
        "toChannel": "@destination_channel"
      },
      "autoTextReplacementConfig": {
        "enabled": true,
        "replacements": {
          "hello": "hi",
          "bye": "see you"
        }
      }
    }
  }
}
